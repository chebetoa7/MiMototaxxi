<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MiMototaxxi.View.UserSelection.UserSelectionPage"
             BackgroundColor="#E7E8E3"
             Shell.NavBarHasShadow="False"
             Shell.NavBarIsVisible="False">
    <!--#region GridPincipal-->
    <Grid RowDefinitions="5.0*,5.0*"
          VerticalOptions="Fill"
          BackgroundColor="Transparent">
        <!--#region Splash-->
        <VerticalStackLayout BackgroundColor="Transparent"
                             Grid.Row="0"
                             Grid.RowSpan="2"
                             IsVisible="False"
                         VerticalOptions="Center">
            <Image Source="logincontraste.png"
               Margin="35,0,35,0"
               VerticalOptions="Center"/>
        </VerticalStackLayout>
        <!--#endregion-->
       <!--#region SeleccionaUsuario-->
        <Grid RowDefinitions="10.0*,45.0*,45.0*"
              VerticalOptions="Fill"
              IsVisible="True"
              Grid.Row="0"
              Grid.RowSpan="2"
              BackgroundColor="Transparent">
            <Grid Grid.Row="0"
                  VerticalOptions="Fill"
                  BackgroundColor="Transparent"
                  ColumnDefinitions="2.5*,7.5*">
                <Image Grid.Column="0"
                       HeightRequest="44"
                       Source="img_back_s.png"/>
                <VerticalStackLayout Grid.Column="1"
                                     BackgroundColor="Transparent"
                                     VerticalOptions="Center"
                                     Margin="-10,0,0,0">
                    <Label Text="SELECCIONA"
                           FontSize="25"
                           FontAttributes="Bold"
                           Margin="40,0,0,0"
                           HorizontalOptions="Start"
                           />
                    <Label Text="USUARIO"
                           FontSize="25"
                           FontAttributes="Bold"
                           Margin="65,0,0,0"
                           HorizontalOptions="Start"/>
                </VerticalStackLayout>
            </Grid>
            <VerticalStackLayout Grid.Row="1"
                                 BackgroundColor="Transparent"
                                 HorizontalOptions="Fill"
                                 VerticalOptions="Center">
                <Image Source="img_user_s.png"
                       HeightRequest="100"
                       Margin="0,0,0,10"/>
                <Button BackgroundColor="Transparent"
                        BorderColor="#FF746B"
                        BorderWidth="5"
                        Text="Pasajero" 
                        TextColor="#FF746B"
                        FontSize="26"
                        CornerRadius="30"
                        FontAttributes="Bold"
                        HeightRequest="60"
                        WidthRequest="193"
                        Command="{Binding GoUserPasajeroCommand}"/>
            </VerticalStackLayout>
            <VerticalStackLayout Grid.Row="2"
                                 BackgroundColor="Transparent"
                                 VerticalOptions="Center">
                <Image Source="img_conductor_s.png"
                       HeightRequest="100"
                       />
                <Button BackgroundColor="Transparent"
                        BorderColor="#FF746B"
                        BorderWidth="5"
                        Text="Mototaxxi" 
                        TextColor="#FF746B"
                        FontSize="26"
                        CornerRadius="30"
                        FontAttributes="Bold"
                        HeightRequest="60"
                        WidthRequest="193"
                        Command="{Binding GoUserMototaxiCommand}"/>
            </VerticalStackLayout>
        </Grid>
        <!--#endregion-->
        <!--#region LoginMototaxxi-->
        <Grid RowDefinitions="10.0*,30.0*,60.0*"
              VerticalOptions="Fill"
              Grid.Row="0"
              IsVisible="False"
              Grid.RowSpan="2"
              BackgroundColor="Transparent">
            <Grid Grid.Row="0"
                  VerticalOptions="Fill"
                  BackgroundColor="Transparent"
                  ColumnDefinitions="2.5*,7.5*">
                <Image Grid.Column="0"
                       HeightRequest="44"
                       Source="img_back_s.png"/>
                <VerticalStackLayout Grid.Column="1"
                                     BackgroundColor="Transparent"
                                     VerticalOptions="Center"
                                     Margin="-10,0,0,0">
                    <Label Text="MOTOTAXISTA"
                           FontSize="25"
                           FontAttributes="Bold"
                           Margin="60,0,0,0"
                           VerticalOptions="Center"
                           />
                </VerticalStackLayout>
            </Grid>
            <VerticalStackLayout Grid.Row="1"
                                 BackgroundColor="Transparent"
                                 VerticalOptions="Fill">

                <Label Text="Número telefónico registrado"
                           FontSize="18"
                           Margin="0,30,0,0"
                           HorizontalOptions="Center"
                           FontAttributes="Bold"
                           TextColor="#4D4D4D"/>
                <Border HeightRequest="60"
                            WidthRequest="300"
                            Margin="0,10,0,0"
                            BackgroundColor="White"
                            StrokeShape="RoundRectangle 20"
                            >
                    <Entry Text="0000000000"
                               Keyboard="Numeric"
                               VerticalOptions="Center"
                               FontSize="18"
                               TextColor="#AEAEAE"
                               Margin="20,0,0,0"/>
                </Border>

                <Label Text="Contraseña"
                           FontSize="18"
                           Margin="0,20,0,0"
                           HorizontalOptions="Center"
                           FontAttributes="Bold"
                           TextColor="#4D4D4D"/>
                <Border HeightRequest="60"
                            WidthRequest="300"
                            Margin="0,10,0,0"
                            BackgroundColor="White"
                            StrokeShape="RoundRectangle 20"
                            >
                    <Entry Text="1234"
                               VerticalOptions="Center"
                               IsPassword="True"
                               
                               FontSize="18"
                               TextColor="#AEAEAE"
                               Margin="20,0,20,0"/>
                </Border>

            </VerticalStackLayout>
            <VerticalStackLayout Grid.Row="2"
                                 BackgroundColor="Transparent"
                                 VerticalOptions="Fill">
                <Image Source="btn_ingresar.png"
                       HeightRequest="90"
                       Margin="0,30,0,0"/>
                <Image Source="btn_registrar_u.png"
                       HeightRequest="90"
                       Margin="0,20,0,0"/>
            </VerticalStackLayout>
        </Grid>
        <!--#endregion-->
        <!--#region MiRegistrato-->
        <Grid RowDefinitions="10.0*,90.0*"
              VerticalOptions="Fill"
              Grid.Row="0"
              IsVisible="False"
              Grid.RowSpan="2"
              BackgroundColor="Transparent">
            <Grid Grid.Row="0"
                  VerticalOptions="Fill"
                  BackgroundColor="Transparent"
                  ColumnDefinitions="2.5*,7.5*">
                <Image Grid.Column="0"
                       HeightRequest="44"
                       Source="img_back_s.png"/>
                <VerticalStackLayout Grid.Column="1"
                                     BackgroundColor="Transparent"
                                     VerticalOptions="Center"
                                     Margin="-10,0,0,0">
                    <Label Text="MOTOTAXISTA"
                           FontSize="25"
                           FontAttributes="Bold"
                           Margin="60,0,0,0"
                           VerticalOptions="Center"
                           />
                </VerticalStackLayout>
            </Grid>
            <VerticalStackLayout Grid.Row="1"
                                 BackgroundColor="Transparent"
                                 VerticalOptions="Fill">

                <Label Text="Nombre"
                           FontSize="18"
                           Margin="0,10,0,0"
                           HorizontalOptions="Center"
                           FontAttributes="Bold"
                           TextColor="#4D4D4D"/>
                <Border HeightRequest="60"
                            WidthRequest="300"
                            Margin="0,10,0,0"
                            BackgroundColor="White"
                            StrokeShape="RoundRectangle 20"
                            >
                    <Entry Keyboard="Text"
                           Placeholder="Ingrese nombre"
                           VerticalOptions="Center"
                           FontSize="18"
                           TextColor="#AEAEAE"
                           Margin="20,0,0,0"/>
                </Border>

                <Label Text="Apellidos"
                           FontSize="18"
                           Margin="0,10,0,0"
                           HorizontalOptions="Center"
                           FontAttributes="Bold"
                           TextColor="#4D4D4D"/>
                <Border HeightRequest="60"
                            WidthRequest="300"
                            Margin="0,10,0,0"
                            BackgroundColor="White"
                            StrokeShape="RoundRectangle 20"
                            >
                    <Entry Placeholder="Ingrese Apellidos"
                               Keyboard="Text"
                               VerticalOptions="Center"
                               FontSize="18"
                               TextColor="#AEAEAE"
                               Margin="20,0,0,0"/>
                </Border>

                <Label Text="Número telefónico"
                           FontSize="18"
                           Margin="0,10,0,0"
                           HorizontalOptions="Center"
                           FontAttributes="Bold"
                           TextColor="#4D4D4D"/>
                <Border HeightRequest="60"
                            WidthRequest="300"
                            Margin="0,10,0,0"
                            BackgroundColor="White"
                            StrokeShape="RoundRectangle 20"
                            >
                    <Entry Placeholder="0000000000"
                               Keyboard="Numeric"
                               VerticalOptions="Center"
                               FontSize="18"
                               TextColor="#AEAEAE"
                               Margin="20,0,0,0"/>
                </Border>

                <Label Text="Correo electrónico"
                           FontSize="18"
                           Margin="0,10,0,0"
                           HorizontalOptions="Center"
                           FontAttributes="Bold"
                           TextColor="#4D4D4D"/>
                <Border HeightRequest="60"
                            WidthRequest="300"
                            Margin="0,10,0,0"
                            BackgroundColor="White"
                            StrokeShape="RoundRectangle 20"
                            >
                    <Entry Placeholder="Ingresa correo"
                               Keyboard="Text"
                               VerticalOptions="Center"
                               FontSize="18"
                               TextColor="#AEAEAE"
                               Margin="20,0,0,0"/>
                </Border>

                <Label Text="CP"
                           FontSize="18"
                           Margin="0,10,0,0"
                           HorizontalOptions="Center"
                           FontAttributes="Bold"
                           TextColor="#4D4D4D"/>
                <Border HeightRequest="60"
                            WidthRequest="300"
                            Margin="0,10,0,0"
                            BackgroundColor="White"
                            StrokeShape="RoundRectangle 20"
                            >
                    <Entry Placeholder="Ingresa código postal"
                               Keyboard="Numeric"
                               VerticalOptions="Center"
                               FontSize="18"
                               TextColor="#AEAEAE"
                               Margin="20,0,0,0"/>
                </Border>

                <Border HeightRequest="60"
                            WidthRequest="300"
                            Margin="0,10,0,0"
                            BackgroundColor="Transparent"
                            Stroke="Transparent"
                            >
                    <HorizontalStackLayout HorizontalOptions="Center">
                        <Label Text="Ingrese Edad"
                            FontSize="18"
                            TextColor="#4D4D4D"
                            FontAttributes="Bold"
                            Margin="20,0,0,0"
                            VerticalOptions="Center"/>
                        <Picker Title="Selecciona tu edad"
                                x:Name="AgePicker"
                                WidthRequest="100"
                                HorizontalTextAlignment="Center"
                                HorizontalOptions="Center"
                                Margin="20,0,0,0"
                                TextColor="Transparent"
                                
                                BackgroundColor="Transparent"
                                FontSize="Medium" />
                    </HorizontalStackLayout>

                </Border>


                <Button Text="REGISTRAR"
                        FontSize="18"
                        FontAttributes="Bold"
                        WidthRequest="222"
                        CornerRadius="20"
                        Margin="0,20,0,0"
                        BackgroundColor="#0AC89A"/>




            </VerticalStackLayout>
        </Grid>
        <!--#endregion-->
        <!--#region RegistroMoto-->
        <Grid RowDefinitions="10.0*,90.0*"
              VerticalOptions="Fill"
              Grid.Row="0"
              IsVisible="False"
              Grid.RowSpan="2"
              BackgroundColor="Transparent">
            <Grid Grid.Row="0"
                  VerticalOptions="Fill"
                  BackgroundColor="Transparent"
                  ColumnDefinitions="2.5*,7.5*">
                <Image Grid.Column="0"
                       HeightRequest="44"
                       Source="img_back_s.png"/>
                <VerticalStackLayout Grid.Column="1"
                                     BackgroundColor="Transparent"
                                     VerticalOptions="Center"
                                     Margin="-10,0,0,0">
                    <Label Text="AGREGA MOTO"
                           FontSize="25"
                           FontAttributes="Bold"
                           Margin="60,0,0,0"
                           VerticalOptions="Center"
                           />
                </VerticalStackLayout>
            </Grid>
            <VerticalStackLayout Grid.Row="1"
                                 BackgroundColor="Transparent"
                                 VerticalOptions="Fill">

                <Label Text="Marca"
                           FontSize="18"
                           Margin="0,10,0,0"
                           HorizontalOptions="Center"
                           FontAttributes="Bold"
                           TextColor="#4D4D4D"/>
                <Border HeightRequest="60"
                            WidthRequest="300"
                            Margin="0,10,0,0"
                            BackgroundColor="White"
                            StrokeShape="RoundRectangle 20"
                            >
                    <Entry Keyboard="Text"
                           Placeholder="Ingrese marca"
                           VerticalOptions="Center"
                           FontSize="18"
                           TextColor="#AEAEAE"
                           Margin="20,0,0,0"/>
                </Border>

                <Label Text="Modelo"
                           FontSize="18"
                           Margin="0,10,0,0"
                           HorizontalOptions="Center"
                           FontAttributes="Bold"
                           TextColor="#4D4D4D"/>
                <Border HeightRequest="60"
                            WidthRequest="300"
                            Margin="0,10,0,0"
                            BackgroundColor="White"
                            StrokeShape="RoundRectangle 20"
                            >
                    <Entry Placeholder="Ingrese modelo"
                               Keyboard="Text"
                               VerticalOptions="Center"
                               FontSize="18"
                               TextColor="#AEAEAE"
                               Margin="20,0,0,0"/>
                </Border>

                <Label Text="Año"
                           FontSize="18"
                           Margin="0,10,0,0"
                           HorizontalOptions="Center"
                           FontAttributes="Bold"
                           TextColor="#4D4D4D"/>
                <Border HeightRequest="60"
                            WidthRequest="300"
                            Margin="0,10,0,0"
                            BackgroundColor="White"
                            StrokeShape="RoundRectangle 20"
                            >
                    <Entry Placeholder="año de la moto"
                               Keyboard="Numeric"
                               VerticalOptions="Center"
                               FontSize="18"
                               TextColor="#AEAEAE"
                               Margin="20,0,0,0"/>
                </Border>

                <Label Text="Color"
                           FontSize="18"
                           Margin="0,10,0,0"
                           HorizontalOptions="Center"
                           FontAttributes="Bold"
                           TextColor="#4D4D4D"/>
                <Border HeightRequest="60"
                            WidthRequest="300"
                            Margin="0,10,0,0"
                            BackgroundColor="White"
                            StrokeShape="RoundRectangle 20"
                            >
                    <Entry Placeholder="Ingresa correo"
                               Keyboard="Text"
                               VerticalOptions="Center"
                               FontSize="18"
                               TextColor="#AEAEAE"
                               Margin="20,0,0,0"/>
                </Border>

                <Label Text="Describe tu mototaxi"
                           FontSize="18"
                           Margin="0,10,0,0"
                           HorizontalOptions="Center"
                           FontAttributes="Bold"
                           TextColor="#4D4D4D"/>
                <Border HeightRequest="60"
                            WidthRequest="300"
                            Margin="0,10,0,0"
                            BackgroundColor="White"
                            StrokeShape="RoundRectangle 20"
                            >
                    <Entry Placeholder="Caracteristicas de moto"
                               Keyboard="Numeric"
                               VerticalOptions="Center"
                               FontSize="18"
                               TextColor="#AEAEAE"
                               Margin="20,0,0,0"/>
                </Border>


                <Button Text="+ MOTO"
                        FontSize="20"
                        FontAttributes="Bold"
                        WidthRequest="222"
                        CornerRadius="20"
                        Margin="0,20,0,0"
                        BackgroundColor="#0AC89A"/>




            </VerticalStackLayout>
        </Grid>
        <!--#endregion-->
        <!--#region RegistroMoto-->
        <Grid 
              VerticalOptions="Fill"
              Grid.Row="0"
              IsVisible="False"
              Grid.RowSpan="2"
              BackgroundColor="#60606060">
            <Border HeightRequest="550"
                    WidthRequest="347"
                    BackgroundColor="White"
                    Margin="20,0,20,20"
                    StrokeShape="RoundRectangle 20">
                
            </Border>
        </Grid>
        <!--#endregion-->
        
        
    </Grid>
    <!--#endregion-->
</ContentPage>